{% extends 'base.html.twig' %}

{% block title %}Annonce !{% endblock %}

{% block body %}
    {% include 'inc/header.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h4>{{ ad1.title }}</h4>
                <p>{{ ad1.texte }}</p>
            </div>
            <div class="col-3 text-center" style="max-height : 900px;">
                <div class="h5">Nos partenaires</div>
                <img src="{{ ad2.image }}" alt="{{ ad2.title }}" class="col-12" style="object-fit: fill;">
            </div>

            <div class="col-6">
                <h1>{{ annonce.title|capitalize }}</h1>
                <h3>{{ annonce.price|number_format(2,',', ' ') }} €</h3>
                <div>
                    {{ annonce.description|raw }}
                </div>
                <div class="col-6">
                    <div class="w-100 mb-4">
                        posté le <b>{{ annonce.postedDate|date('d/M/Y') }}</b>
                    </div>
                    <div class="h4">Vendeur</div>
                    <div class="subtitle">
                        {{ annonce.owner.username }}
                    </div>
                    <div class="contact">
                        <div class="phone">
                            <a href="tel:{{ annonce.owner.tel }}">{{ annonce.owner.tel }}</a>
                        </div>
                        <div class="address">
                            {{ seller.cp }} {{ seller.city }}
                        </div>
                    </div>
                    <div class="citydata">
                        <div class="city">
                            <p>Nom : {{ seller.city_data.city }}</p>
                        </div>
                        <div class="cp">
                            <p>Code postal : {{ seller.city_data.cp }}</p>
                        </div>
                        <div class="lat">
                            <p>Lattitude : {{ seller.city_data.lat }}</p>
                        </div>
                        <div class="lon">
                            <p>Longitude : {{ seller.city_data.lon }}</p>
                        </div>
                        <div class="departement">
                            <p>Departement : {{ seller.city_data.departement }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 text-center" style="max-height : 900px;">
                <div class="h5">Nos partenaires</div>
                <img src="{{ ad2.image }}" alt="{{ ad2.title }}" class="col-12" style="max-height : 100%">
            </div>
        </div>
    </div>

    {% include 'inc/footer.html.twig' %}
{% endblock %}


{% block javascript_footer %}
    <!-- coucou -->
{% endblock %}